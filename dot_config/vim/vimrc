" setting
set encoding=utf-8
set nobackup
set autoread
set hidden
set showcmd

set number
set cursorline
set cursorcolumn
set virtualedit=onemore
set smartindent
set showmatch
set laststatus=2
set wildmode=list:longest
nnoremap j gj
nnoremap k gk
syntax enable

set expandtab
set tabstop=4
set shiftwidth=4

set ignorecase
set smartcase
set incsearch
set wrapscan
set hlsearch

set viminfo+=n~/.config/vim/viminfo
set directory=~/.local/state/vim/swap
set undodir=~/.local/state/vim/undo
